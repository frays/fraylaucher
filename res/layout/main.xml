<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#000000">
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/fragmentBook"
            android:layout_margin="5dp">
    </FrameLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp" android:id="@+id/fragmentLasts" android:layout_margin="5dp">
    </FrameLayout>
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp" android:layout_marginBottom="20px" android:id="@+id/fragmentButtons">
    </FrameLayout>
</LinearLayout>